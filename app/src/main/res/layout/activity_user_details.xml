<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#4169E1"
    tools:context="com.cmpe277.skibuddy.UserDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/profilePicUserDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"  />


            <ImageView
                android:src="@drawable/imageborder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <TextView
            android:id="@+id/userNameUserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10sp"
            android:gravity="center">



            <TextView
                android:id="@+id/emailUserDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tagLineUserDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:textStyle="bold" />
 </LinearLayout>

    <View
        android:layout_margin="10sp"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#ffffff" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:gravity="top">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:layout_weight="0.5"
            android:textColor="#ffffff"
            android:text="Skiing Records:" />



        <Button
            android:id="@+id/displayUserLocation"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginRight="20sp"
            android:textSize="15sp"
            android:visibility="invisible"
            android:background="@mipmap/displaylocation"/>
    </LinearLayout>

    <View
        android:layout_margin="10sp"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#ffffff" />

    <ListView
        android:id="@+id/recordsViewUserDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@drawable/edit_style"></ListView>




</LinearLayout>
