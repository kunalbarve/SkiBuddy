<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.cmpe277.skibuddy.DisplayRecordActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:textStyle="bold"
            android:text="@string/display_record_record_name" />

        <TextView
            android:id="@+id/textRecordName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:textStyle="bold"
            android:text="@string/display_record_event_name" />

        <TextView
            android:id="@+id/textEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:textStyle="bold"
            android:text="@string/display_record_distance_covered" />

        <TextView
            android:id="@+id/textDistanceCovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:textStyle="bold"
            android:text="@string/display_record_total_time" />

        <TextView
            android:id="@+id/textTraveledTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingLeft="2sp"
            android:text="" />
    </LinearLayout>

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="2sp"
        android:paddingBottom="5sp"
        android:textStyle="bold"
        android:text="@string/display_record_path" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/pathmap"
        tools:context="com.cmpe277.skibuddy.SkiTrackerActivity"
        android:layout_alignParentBottom="true"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
</LinearLayout>



</RelativeLayout>




