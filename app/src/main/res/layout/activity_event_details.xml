<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4169E1"
    tools:context="com.cmpe277.skibuddy.EventDetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingTop="5dp">

        <Button
            android:id="@+id/subscribeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/edit_style"
            android:padding="5dp"
            android:text="Subscribe" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="-25sp">


            <Button
                android:id="@+id/unSubscribeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/reject"
                android:padding="5dp"
                android:layout_marginRight="15dp" />

            <Button
                android:id="@+id/addParticipantButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@mipmap/adduser"
                android:padding="5dp" />
        </LinearLayout>

        <Button
            android:id="@+id/skiTrackerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-65sp"
            android:background="@mipmap/skitracker"
            android:padding="5dp"
            android:layout_marginBottom="10sp"/>

        <View
            android:layout_margin="10sp"
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:text="@string/event_details_event_name"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textEventName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:paddingLeft="2sp"
                android:text=""
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:text="@string/event_details_event_description"
                android:textColor="#ffffff"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textEventDescription"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:textColor="#ffffff"
                android:text=""
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:text="@string/event_details_start_time"
                android:textSize="18sp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textStartTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:paddingLeft="2sp"
                android:text=""
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10sp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:text="@string/event_details_end_time"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textEndTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="2sp"
                android:textColor="#ffffff"
                android:text=""
                android:textSize="18sp"/>
        </LinearLayout>


        <View
            android:layout_margin="10sp"
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="#ffffff" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Event Participants"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp" />


        <ListView
            android:id="@+id/participantsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/edit_style"></ListView>


    </LinearLayout>

</ScrollView>
